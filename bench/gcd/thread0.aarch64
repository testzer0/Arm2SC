////
// 2 threads
// a: first number, address 0 
// b: second number, address 1
// lock: the lock variable, owners'id+1 stored in it, address 2
// done[2]: whether the processes are done, addresses 3 and 4
//

// As thread 0, we should only update a
// Do the following in a loop as long as a != b
// Acquire the lock, read a and b
// replace a by |a-b|
// release the lock

repeat:
	DMB SY 							;
	MOV R1,#2						;
	MOV R2,#1 						;
trylock:
	LDAXR R0,[R1]					;
	CBNZ R0,trylock					;
	STLXR R3,R2,[R1]				;
	CBNZ R3,trylock					;

// we have the lock
// read a,b; R2 already has 1
	DMB SY 							;
	MOV R3,#0 						;
	LDR R0,[R3]						;
	LDR R1,[R2]						;

// compare and update
	CMP R0,R1						;
	B.EQ done 						;
	B.GT greater					;
	SUB R2,R1,R0					;
	B skip							;
greater:
	SUB R2,R0,R1					;
skip:
	DMB SY 							;
// R3 already has 0
	STR R2,[R3]						;
// unlock and repeat
	DMB SY 							;
	MOV R0,#0 						;
	MOV R1,#2 						;
	STR R0,[R1]						;
	B repeat						;

done:
	DMB SY 							;
// unlock
	MOV R0,#0 						;
	MOV R1,#2 						;
	STR R0,[R1]						;
	MOV R0,#1 						;
	MOV R1,#3 						;
	STR R0,[R1]						;